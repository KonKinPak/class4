= form_with(model: user, url:"/newpost",method: :get) do |form|
  - if user.errors.any?
    #error_explanation
      %h2
        = pluralize(user.errors.count, "error")
        prohibited this user from being saved:
      %ul
        - user.errors.each do |error|
          %li= error.full_message
  .field
    = form.label :msg
    = form.text_field :msg
  .actions
    = form.submit
  = form.hidden_field :id